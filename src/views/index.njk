{% extends "base.njk" %}

{% block head %}
    <link rel="stylesheet" href="assets/css/overview.css" />
{% endblock head %}

{% block tab %}
    <div class="tab-options">
        <div class="tab-options-title">Navigation</div>
        <div class="tab-item {{ "active" if page == "overview" else ""}}">
            <span class="nonicons--layout-16" style="font-size: 20px;"></span>
            <a href="/overview">Overview</a>
        </div>
        <div class="tab-item {{ "active" if page == "started" else ""}}">
            <span class="ph--package"></span>
            <a href="/started">Getting Started</a>
        </div>
        <div class="tab-item {{ "active" if page == "docs" else ""}}">
            <span class="subway--book"></span>
            <a href="/docs">Docs</a>
        </div>
    </div>
    <div class="tab-options">
        <div class="tab-options-title">Others</div>
        <div class="tab-item {{ "active" if page == "help" else ""}}">
            <span class="clarity--settings-line"></span>
            <a href="/help">Options</a>
        </div>
        <div class="tab-item {{ "active" if page == "about" else ""}}">
            <span class="oi--info"></span>
            <a href="about">About</a>
        </div>
    </div>
{% endblock tab %}

{% block content %}
    {% if page == "started" %}
        {% include "components/__started.njk" %}
    {% elif page == "overview" %}
        {% include "components/__overview.njk" %}
    {% elif page == "about" %}
        {% include "components/__about.njk" %}
    {% elif page == "help" %}
        {% include "components/__help.njk" %}
    {% elif page == "docs" %}
        {% include "components/__docs.njk" %}
    {% else %}
        {% include "components/__notfound.njk" %}
    {% endif %}
{% endblock content %}